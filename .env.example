# EDUCAFRIC Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
PGUSER=your_postgres_user
PGPASSWORD=your_postgres_password
PGDATABASE=educafric_db
PGHOST=localhost
PGPORT=5432

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_here

# Firebase Configuration (Optional - for Google OAuth)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Email Service (Hostinger SMTP)
HOSTINGER_EMAIL_USER=your_email@yourdomain.com
HOSTINGER_EMAIL_PASS=your_email_password
HOSTINGER_SMTP_HOST=smtp.hostinger.com
HOSTINGER_SMTP_PORT=587

# SMS/WhatsApp Service (Vonage)
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_PHONE_NUMBER=your_vonage_phone_number

# Payment Service (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Configuration
NODE_ENV=development
PORT=5000
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=EDUCAFRIC

# Security Configuration
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Geolocation Service
GEOLOCATION_API_KEY=your_geolocation_api_key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./public/uploads

# Notification Configuration
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_VAPID_PUBLIC_KEY=your_vapid_public_key
NOTIFICATION_VAPID_PRIVATE_KEY=your_vapid_private_key

# Development Configuration
DEBUG_MODE=true
ENABLE_LOGGING=true
LOG_LEVEL=info

# African Payment Methods (Optional)
ORANGE_MONEY_API_KEY=your_orange_money_key
MTN_MOBILE_MONEY_API_KEY=your_mtn_money_key
AFRILAND_BANK_API_KEY=your_afriland_bank_key

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30